<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
  android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.administrator.lepaiyizhu.MainActivity"
    tools:showIn="@layout/activity_main">

    <LinearLayout
        android:id="@+id/liearlayoutHead"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="#565A62"
        android:gravity="center_vertical"

        android:orientation="horizontal">
        <TextView
            android:id="@+id/textView1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="精选"/>
        <TextView
            android:id="@+id/textView2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="器材"/>
        <TextView
            android:id="@+id/textView3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="影像"/>
        <TextView
            android:id="@+id/textView4"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="学院"/>
    </LinearLayout>

    <TextView
        android:id="@+id/textViewLine"
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:layout_below="@id/liearlayoutHead"
        android:layout_above="@+id/viewpager"
        android:background="#DF6108"/>

    <android.support.v4.view.ViewPager

        android:id="@+id/viewpager"
        android:layout_width="match_parent"
        android:layout_height="480dp"
        android:layout_above="@+id/mainRadioTabs"

        >
    </android.support.v4.view.ViewPager>
    <RadioGroup

        android:id="@+id/mainRadioTabs"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="1dp"

        android:orientation="horizontal" >

        <RadioButton
            android:id="@+id/mainRadio_news"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:background="@drawable/img_guide2"
            android:button="@null"
            android:checked="true" />

        <RadioButton
            android:id="@+id/mainRadio_pic"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:background="@drawable/img_guide2"
            android:button="@null" />

        <RadioButton
            android:id="@+id/mainRadio_bbs"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:background="@drawable/img_guide2"
            android:button="@null" />

        <RadioButton
            android:id="@+id/mainRadio_set"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:background="@drawable/img_guide2"
            android:button="@null" />
    </RadioGroup>
</LinearLayout>
